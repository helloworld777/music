<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E0E0E0"
        android:paddingBottom="5dip"
        android:paddingLeft="20dip"
        android:paddingTop="5dip"
        android:text="A"
        android:textColor="#454545" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_press"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_album"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/playing_bar_default_avatar" />

        <ImageView
            android:id="@+id/iv_album_bg"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/index_alb_cover" />

        <TextView
            android:id="@+id/tv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/iv_album"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="龙卷风"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_number_of_songs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_album_name"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@+id/iv_album"
            android:text="1首"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_album_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@+id/tv_number_of_songs"
            android:text="邓紫棋"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0" />

</LinearLayout>