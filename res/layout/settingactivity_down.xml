<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <com.music.ui.widget.RippleView
        android:id="@+id/rl_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/menu_setting_selector"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/group_arrow_right" />

        <TextView
            android:id="@+id/tv_sh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲下载目录" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_sh"
            android:layout_below="@+id/tv_sh"
            android:text="/storage/emulated/0/lu/download"
            android:textSize="7sp" />
    </com.music.ui.widget.RippleView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#e0e0e0" />

    <com.music.ui.widget.RippleView
         android:id="@+id/rl_clear_memory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/menu_setting_selector"
        android:padding="15dp" >

        <TextView
            android:id="@+id/tv_shiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清理缓存" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_shiting"
            android:background="@drawable/navigation_new"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="当前缓存0M"
            android:textColor="#a0a0a0" />
    </com.music.ui.widget.RippleView>

</LinearLayout>