<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66aaff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_music_btn"
        android:src="@drawable/ic_common_title_bar_back" />

    <com.music.widget.AlwaysMarqueeTextView
        android:id="@+id/tv_title"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/iv_back"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="本地音乐"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iv_more"
        android:background="@drawable/ic_common_title_bar_search"
         />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_back"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_music_btn"
        android:src="@drawable/ic_common_title_bar_menu" />

</RelativeLayout>